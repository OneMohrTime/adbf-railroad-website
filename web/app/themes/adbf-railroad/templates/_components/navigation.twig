{% if menu %}
    <ul class="c-navigation js-menu">
        {% for item in items %}
            <li class="c-navigation__item">
                <a target="{{ item.target }}" href="{{ item.link }}" class="c-link">
                    <span class="c-link__text">{{ item.title }}</span>
                </a>
                {# {% if item.children %}{% endif %} #}
            </li>
        {% endfor %}
    </ul>
{% endif %}
