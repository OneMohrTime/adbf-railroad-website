<nav class="c-sidebar">
    <ul class="c-sidebar__menu">

        {% for item in sidebar.items %}
            <li class="c-sidebar__menu-item">

                <a href="{{ item.link }}" class="c-link{% if item.children %} -title{% endif %}">{{ item.title }}</a>

                {% if item.children %}
                    <ul class="c-sidebar__submenu">

                        {% for subitem in item.children %}
                            <li class="c-sidebar__submenu-item">
                                <a href="{{ subitem.link }}" class="c-link">{{ subitem.title }}</a>
                            </li>
                        {% endfor %}

                    </ul>
                {% endif %}

            </li>
        {% endfor %}

    </ul>
</nav>
